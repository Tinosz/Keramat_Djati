<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/black_border"
    android:padding="12dp"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/category_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Category Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edit_category"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"/>

    <ImageView
        android:id="@+id/edit_category"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_edit"
        android:background="@drawable/ic_edit_background"
        android:padding="6dp"
        android:contentDescription="Edit"
        app:layout_constraintEnd_toStartOf="@+id/delete_category"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginEnd="8dp"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/delete_category"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_delete"
        android:background="@drawable/ic_delete_background"
        android:padding="6dp"
        android:contentDescription="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:tint="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>
