<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Top row with 'Done' button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:background="@drawable/keyboard_button_background"> <!-- This aligns the content (button) to the right -->

        <!-- Done button on the right -->
        <Button
            android:id="@+id/button_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selesai"
            android:background="@android:color/transparent"
            android:textColor="@color/main_green"
            android:textStyle="bold"/>
    </LinearLayout>
    <!-- The custom keyboard grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4">

        <!-- Row 1 -->
        <Button
            android:id="@+id/button_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="1"
            android:background="@drawable/keyboard_button_background"
            app:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/button_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="2"
            android:background="@drawable/keyboard_button_background"
            app:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/button_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="3"
            android:background="@drawable/keyboard_button_background"
            app:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_gravity="fill"/>

        <!-- Row 2 -->
        <Button
            android:id="@+id/button_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="4"
            android:background="@drawable/keyboard_button_background"
            app:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/button_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="5"
            android:background="@drawable/keyboard_button_background"
            app:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/button_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="6"
            android:background="@drawable/keyboard_button_background"
            app:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_gravity="fill"/>

        <!-- Row 3 -->
        <Button
            android:id="@+id/button_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="7"
            android:background="@drawable/keyboard_button_background"
            app:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/button_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="8"
            android:background="@drawable/keyboard_button_background"
            app:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/button_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="9"
            android:background="@drawable/keyboard_button_background"
            app:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_gravity="fill"/>

        <!-- Row 4 -->
        <Button
            android:id="@+id/button_000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="000"
            android:background="@drawable/keyboard_button_background"
            app:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/button_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="0"
            android:background="@drawable/keyboard_button_background"
            app:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_gravity="fill"/>

        <Button
            android:id="@+id/button_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Delete"
            android:background="@drawable/keyboard_button_background"
            app:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_gravity="fill"/>

    </GridLayout>

</LinearLayout>
