<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set solid color (background color) -->
    <solid android:color="@android:color/white" />

    <!-- Set rounded corners -->
    <corners android:radius="8dp" />

    <!-- Set stroke (outline) color and width -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Optional padding inside the input field -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
